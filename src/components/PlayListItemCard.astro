---
import type { Album } from "@/lib/types";
import {CardPlayButton} from "./CardPlayButton";

interface Props {
  album: Album;
}

const { album } = Astro.props;
const { albumId, title, artists, cover } = album;

console.log(title)
const artistsString = artists.join(", ");
---

<article class="group relative hover:bg-zinc-800 shadow-lg hover:shadow-xl bg-zinc-500/30 rounded-md transition-all duration-300">
  <div class="absolute right-4 bottom-20 translate-y-4 transition-all
  duration-500 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 z-10">
    <CardPlayButton id={albumId} client:visible/>
  </div>
  <a
  href={`/playlist/${albumId}`}
  class="playlist-item transition-all duration-300 flex relative p-2 overflow-hidden
  gap-2 pb-6 lg:w-44 w-36 flex-col"
  transition:name=`playlist ${albumId} box`
>
  <picture class="aspect-square h-auto w-full flex-none">
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistsString}`}
      class="object-cover w-full h-full rounded-md"
      transition:name=`playlist ${albumId} image`
    />
  </picture>
  <div class="flex flex-auto flex-col px-2">
    <h4 class="text-sm" transition:name=`playlist ${album?.albumId} title`>{title}</h4>
    <span class="text-xs text-gray-400" transition:name=`playlist ${album?.albumId} artists`>{artistsString}</span>
  </div>
</a>
</article>
